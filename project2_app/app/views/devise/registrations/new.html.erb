<h2 class="welcome">Welcome to MoodNotes!</h2>
<div class="row" id="form">
<div class="large-6 columns">
  <div class="signup-panel">
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="row collapse">
        <div class="small-2  columns">
          <span class="prefix"><i class="fa fa-user fa-lg"></i></span>
        </div>
        <div class="small-10  columns">
          <%= f.text_field :username, :placeholder =>"username", autofocus: true%>
        </div>
      </div>
      <div class="row collapse">
        <div class="small-2 columns">
          <span class="prefix"><i class="fa fa-envelope fa-lg"></i></span>
        </div>
        <div class="small-10  columns">
          <%= f.email_field :email, :placeholder => "email" %>
        </div>
      </div>
      <div class="row collapse">
        <div class="small-2 columns ">
          <span class="prefix"><i class="fa fa-lock fa-lg"></i></span>
        </div>
        <div class="small-10 columns ">
          
          <%= f.password_field :password, autocomplete: "off", :placeholder => "password (8 chars minimum)" %>
                  </div>
      </div>
      <div class="row collapse">
        <div class="small-2 columns ">
          <span class="prefix"><i class="fa fa-lock fa-lg"></i></span>
        </div>
        <div class="small-10 columns ">
          <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "confirm password" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "SIGN UP!", :class => "button" %>
      </div>
    <% end %>
     <p>Already have an account? <%= link_to "Login here >>", new_user_session_path, :class => 'navbar-link'  %></p>
  </div>
</div>
</div>






